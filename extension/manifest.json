{
    "manifest_version": 3,
    "name": "Cyber Sakti DeepFake Detector",
    "version": "1.0",
    "action": {
        "default_popup": "index.html",
        "default_icon": "logo1.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "host_permissions": [
        "http://127.0.0.1:8000/*"
    ]
}